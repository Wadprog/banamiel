                <li>
                  <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-image "></i> Logo.png</a>
                </li>
                <li>
                  <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-word"></i> Contract-10_12_2014.docx</a>
                </li>
              </ul>
                <h5 class="mt-5 text-muted">Empleados associados</h5>
              <ul class="list-unstyled">
                  <% tareas.forEach((tarea)=>{ %>
                <li>
                  <a href="/employees/<%= tarea.employees[0].id %>" class="btn-link text-secondary">
                    <div class="user-block">
                       
                      
                           <img class="img-circle img-bordered-sm mr-2" src="<%= tarea.employees[0].imagenProfile %>"> 
                        <span class="username text-truncate" style="max-width: 15px;">
                          <a href="/employees/<%= tarea.employees[0].id %>"> <%= tarea.employees[0].apellido %>.</a>
